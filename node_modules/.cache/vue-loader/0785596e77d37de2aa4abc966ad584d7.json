div class=\"tile is-parent\">\n        <article class=\"tile is-child\">\n            <div class=\"header\">\n              <p class=\"title\"> {{movie.title}} </p>\n              <p class=\"title movie-rating\"> {{movie.vote_average}} </p>\n            </div>\n            <p class=\"subtitle\">\n              <span class=\"uppercase\">{{movie.tagline}}</span>\n            </p>\n            <div class=\"content\">\n                <p class=\"genre-subtitle\">\n                  <span class=\"uppercase\" v-for=\"genre in movie.genres\"> {{genre.name}} </span>\n                </p>\n                <p class=\"subtitle\">\n                  <span class=\"uppercase\">Release date: </span>\n                  <span>{{moment(movie.release_date).format('MM/DD/YYYY hh:mm')}}</span>\n                </p>\n                <div class=\"content\">\n                  {{movie.overview}}\n                </div>\n            </div>\n        </article>\n      </div>\n    </div>\n</template>\n<script>\n  import axios from 'axios';\n  import storage from '../../storage';\n\n  export default {\n    props: ['id'],\n    data(){\n      return {\n        movie: {},\n        movieLoaded: false,\n        moviePosterSrc: '',\n        movieBackdropSrc: '',\n        userLoggedIn: storage.sessionId ? true : false,\n        favoriteChecked: false,\n        favorite: '',\n      }\n    },\n    methods: {\n        fetchMovie(id) {\n          axios.get(`https://api.themoviedb.org/3/movie/${id}?api_key=4cb1eeab94f45affe2536f2c684a5c9e&language=en-US`)\n          .then(function(resp){\n            this.movie = resp.data;\n            console.log(this.movie);\n            this.backdrop();\n            if(storage.createMoviePopup){\n                storage.moviePath = '/movie/' + id;\n                history.pushState({ popup: true }, null, storage.moviePath);\n                storage.createMoviePopup = false;\n            }\n\n            // Change Page title\n            document.title = this.movie.title + storage.pageTitlePostfix;\n        }.bind(this))\n        .catch(function(error) {\n          this.$router.push({ name: '404' });\n        }.bind(this));\n      },\n        backdrop(){\n          if (this.movie.backdrop_path){\n            this.movieBackdropSrc = 'http://image.tmdb.org/t/p/w500' + this.movie.backdrop_path;\n          }\n        },\n    },\n    computed: {\n    },\n    created () {\n      this.fetchMovie(this.id);\n    }\n  }\n</script>\n<style scoped>\n    img {\n      /* opacity: 0.2; */\n    }\n    .tile {\n        padding: 20px;\n    }\n    .header {\n        display: flex;\n    }\n    .title {\n        display: flex;\n        justify-content: flex-start;\n        width: 90%;\n        margin-bottom: 0.5rem;\n    }\n    .movie-rating {\n        display: flex;\n        justify-content: flex-end;\n        color: #209cee;\n    }\n    .subtitle {\n        font-size: 12px;\n    }\n    .uppercase {\n        text-transform: uppercase;\n        color: #209cee;\n    }\n    .genre-subtitle {\n        font-size: 12px;\n    }\n</style>\n"]}]}